<div class="ui text container">
  <div class="ui fluid card">
    <div class="content">
        <h1 id="index-head">All Posts</h1>
    </div>
  </div>
  <% @posts.each do |post| %>
    <a href="/posts/<%=post.id%>" class="ui fluid card animated fadeIn">
      <div class="content">
        <div class="header">
          <h1>
            <%= post.title %>
          </h1>
        </div>
        <div class="meta">
          <%= post.date_published %>
        </div>
        <div class="description">
          <p>
          <%= post.pretext %>
          </p> 
        </div> 
      </div>
    </a> 
  <% end %>
</div>
