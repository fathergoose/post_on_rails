<div class="ui text container">
<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<div class="ui items">
<% @posts.each do |post| %>

  <div class="item">
    <div class="content">
      <%= link_to post.title, post_path(post.id), class: "header" %>
      <div class="description">
        <%= post.preview_body %>
      </div>
    </div>
  </div>

<% end %>
</div>  
</div>